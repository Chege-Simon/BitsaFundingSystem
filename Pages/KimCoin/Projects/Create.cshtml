@page
@model BitsaFundingSystem.Pages.KimCoin.Projects.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/AdminLTE/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <div class="card-title">Register New Project</div>
            </div>
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Project.Title" class="control-label"></label>
                        <input asp-for="Project.Title" class="form-control" />
                        <span asp-validation-for="Project.Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Project.Description" class="control-label"></label>
                        <input asp-for="Project.Description" class="form-control" />
                        <span asp-validation-for="Project.Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Project.GitHubLink" class="control-label">Github link</label>
                        <input asp-for="Project.GitHubLink" class="form-control" />
                        <span asp-validation-for="Project.GitHubLink" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Project.Purpose" class="control-label"></label>
                        <input asp-for="Project.Purpose" class="form-control" placeholder="brief explanation of purpose of project."/>
                        <span asp-validation-for="Project.Purpose" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-3"></div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
