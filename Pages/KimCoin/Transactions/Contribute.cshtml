@page
@model BitsaFundingSystem.Pages.KimCoin.MakeTransactionModel
@{
    ViewData["Title"] = "Contribute";
    Layout = "~/Pages/Shared/AdminLTE/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <div class="card-title">Contribute to Project</div>
            </div>
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.PersonalWalletId" class="control-label"></label>
                        <input asp-for="Input.PersonalWalletId" class="form-control" />
                        <span asp-validation-for="Input.PersonalWalletId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.ProjectWalletId" class="control-label">Wallet</label>
                        <select asp-for="Input.ProjectWalletId" class="form-control" asp-items="ViewBag.ProjectWallets" value="@Model.Input.ProjectWalletId" required>
                            @*<option value="">--Select Project Wallet--</option>*@
                            <option value="">--Select Project Wallet--</option>
                        </select>
                        <span asp-validation-for="Input.ProjectWalletId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Amount" class="control-label"></label>
                        <input asp-for="Input.Amount" class="form-control" />
                        <span asp-validation-for="Input.Amount" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Send" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-3"></div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
